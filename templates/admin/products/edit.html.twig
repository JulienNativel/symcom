{% extends "base.html.twig" %}

{% block title %}BackOffice: Modifier un produit{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="display-4 text-center text-white bg-dark shadow-lg rounded col-7 mx-auto"></h1>

        <div class="row justify-content-center my-5">
            {{ form_start(form, {'attr' : {'class' : 'col-md-5 mx-auto'}}) }}
                {{ form_row(form.title, {'attr' : {'placeholder' : 'Saisir un titre', 'maxlength' : false, 'pattern' : false}, 'label' : "Nom du produit"}) }}
                {{ form_row(form.content, { 'label' : "Description du produit" },
                {'attr' : {'rows' : 12 }}) }} {# on limite la taille en largeur (12 lignes) #}
                {{ form_row(form.price, { 'label' : "Prix du produit" }) }}
                <div class="row justify-content-center mb-3">
                    {{ form_row(form.picture, {'label' : "Photo du produit"})}}
                    <small class="text-muted text-italic fs-italic">Vous pouvez télécharger une autre image </small>
                </div>
                {{ form_row(form.category, { 'label' : "Catégorie du produit" }) }}
                <button type="submit" class="btn btn-primary">Modifier</button>
                <a class="btn col-3 m-2 btn-light" href="{{path('app_admin_products')}}">Retour</a>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
